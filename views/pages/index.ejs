<div class="container">
  <!-- Modal -->
  <div class="modal" id="confirmDialog" role="dialog">
    
      <!-- Modal content-->
      <div class="modal-content" ng-app="userInfoApp">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Confirmation</h4>
        </div>
        <div class="modal-body" id="confirmInfo">
        </div>
        <form name="inputForm" ng-controller="userInputControl" novalidate>
            <div>
                <span ng-show="!infoValid()">
                    Either enter a valid number or e-mail. <br>If you enter a phone number, <br>you must enter a carrier.
                </span>
                <input type="text" placeholder="10 Digit phone number" id="you_phone_nbr" name="phoneNbrModel" ng-model="phoneNbrModel" phone-number-validation> and select carrier  
                <select id="carrier" default="pick a carrier" ng-model="carrierModel" name="carrierModel" carrierValidation>
                    <option value="default"> Pick A Carrier </option>
                </select>
                <span ng-show="$scope.inputForm.phoneNbrModel.$invalid">Phone numbers must be 10 digits</span><br><br>
                <br>
                <p style="text-align: center"> and/or your email </p>
                <br>
                <input type="email" id="emailInput" name="email" ng-model="email" placeholder="youremail@domain.com">
                <span ng-show="$scope.inputForm.email.$invalid">Please enter a valid email</span><br><br>
            </div>
            
            <button type="button" id="submitData" style="margin-bottom: 12px;" 
                    ng-disabled="!infoValid()">Submit!</button>
          </form>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-default" id="confirm">Submit</button>
        </div>
      </div>
    </div>
  </div>
