#! /app/.heroku/node/bin/node
var Heroku = require('heroku-client'),
    heroku = new Heroku({ token: process.env.HEROKU_API_TOKEN });
function sayHello() {
	var app = heroku.apps(process.env.HEROKU_APP_NAME);

	app.info(function (err, app) {
		console.log(app);
  	});
}
sayHello();
process.exit(0);